package classe.desafioModulo;

public class Pessoa {
	String nome;
	double peso;
	
	Pessoa(String nome, double peso){
		this.nome = nome;
		this.peso = peso;
	}
	
	void comer(Comida comida){
		this.peso += comida.peso;
	}
	
	void mostrarPeso(){
		System.out.printf("Peso atual do %S é %.1fKg \n", this.nome, this.peso);
	}
}
