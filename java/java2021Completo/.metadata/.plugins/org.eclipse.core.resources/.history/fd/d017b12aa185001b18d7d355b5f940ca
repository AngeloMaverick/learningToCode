package fundamentos;

public class NotacaoPonto {
	public static void main(String[] args) {
		String s = "Bom dia X"; //String com S maiúsculo
		s = s.replace("X", "Senhora"); //Métodos não armazenam na variável em questão
		s = s.toUpperCase(); //É preciso atribuir
		s = s.concat("!!!");
		
		System.out.println(s);
		//System.out.println("Leo".toUpperCase()); //Exibe: LEO
		
		String x = "Leo".toUpperCase();
		System.out.println(x);
		
		String y = "Bom dia X".replace("X", "Gui").toUpperCase();
		System.out.println(y);
		
		
	}
}
