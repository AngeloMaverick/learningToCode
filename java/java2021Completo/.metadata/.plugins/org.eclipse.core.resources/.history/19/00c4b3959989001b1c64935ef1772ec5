package controle.exercicios;

import java.util.Random;
import java.util.Scanner;

public class Exercicio06 {
	
	public static void main(String[] args) {
		//Jogo da Adivinhação
		
		Scanner entrada = new Scanner(System.in);
		Random random = new Random(); //Declaração Random
		
		int numero = random.nextInt(100); //Delimitando
		System.out.println(numero);
		
		for(int i = 1; i <= 10; i++) {
			System.out.println("\nQual seu palpite: ");
			int digitado = entrada.nextInt();		
			
			if(digitado > numero) {
				System.out.println("O número secreto é MENOR!");
			}else if (digitado < numero) {
				System.out.println("O número secreto é MAIOR!");
			}else {
				System.out.println("PARABÉNS VOCÊ CONSEGUIU!");
				System.out.printf("O número secreto era %d", numero);
			}
			
			if(i<10) {
				System.out.printf("-----Restam %d tentativas!-----\n", 10-i);
			} else {
				System.out.printf("-----FIM DE JOGO!-----");
				
			}
			
		}
		
		entrada.close();
	}
}
