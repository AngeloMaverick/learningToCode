package classe;

public class AreaCirc {
	//static faz a variável pertencer somente a classe,
	//não mais a cada objeto criado.
	double raio;
	final static double PI = 3.1415;
	
	AreaCirc(double raioInicial){
		//pi = 3.14;
		raio = raioInicial;
	}
	
	double area(){
		return PI * Math.pow(raio, 2);
	}
}
