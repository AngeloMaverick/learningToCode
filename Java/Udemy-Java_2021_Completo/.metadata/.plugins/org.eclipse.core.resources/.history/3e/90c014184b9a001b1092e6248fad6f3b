package classe.desafioModulo;

public class Pessoa {
	String nome;
	double peso;
	
	Pessoa(String nome, double peso){
		this.nome = nome;
		this.peso = peso;
	}
	
	void comer(Comida comida) {
		this.peso += comida.peso;
	}
	
	void mostrarPeso(){
		System.out.println("Peso atual do " + this.nome + " é " + this.peso + "Kg");
	}
}
