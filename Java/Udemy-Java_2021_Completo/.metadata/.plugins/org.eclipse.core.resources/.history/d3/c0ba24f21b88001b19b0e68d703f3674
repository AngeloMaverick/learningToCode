package fundamentos;

import java.util.Scanner;

public class DesafioCalculadora {

	public static void main(String[] args) {		
		Scanner entrada = new Scanner(System.in);
		
		System.out.println("Insira o primeiro valor: ");
		double num1 = entrada.nextDouble();
		
		System.out.println("Insira o segundo valor");
		double num2 = entrada.nextDouble();
		
		System.out.println("Escolha uma operação\n "
				+ "+ ou - ou * ou / ou %");
		String op = entrada.next();
		
		System.out.printf("%f %s %f = ?", num1, op, num2);
//		boolean adicao = op.equals("+");
//		boolean subtracao = op.equals("-");
//		boolean multiplicacao = op.equals("*");
//		boolean divisao = op.equals("/");
//		boolean modulo = op.equals("%");
//		
//		System.out.println();
		
		entrada.close();
	}
}
