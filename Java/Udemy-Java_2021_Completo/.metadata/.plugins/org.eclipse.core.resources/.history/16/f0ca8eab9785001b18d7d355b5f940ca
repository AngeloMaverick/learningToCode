package fundamentos;

public class Inferencia {
	public static void main(String[] args) {
		double a = 4.5; //declaração e inicialização
		System.out.println(a);
		
		a = 12;
		System.out.println(a);
		
		//a = "..."; //O tipo não muda após declarada, diferente do JS.
		
		var b = 4.5; //Infere o tipo pelo valor que inseriu, que nem JS
		System.out.println(b);
		
		var c = "Texto";
		System.out.println(c);
		
		c = "Outro texto";
		System.out.println(c);
		
		//c = 4.5; //O tipo não muda após declarada com var, diferente do JS.
		
		double d; //variável foi declarada
		d = 123.65; //variável foi inicializada
		System.out.println(d); //usada!
		
		var e;
		e = 123.45; //Inferencia somente com declaração e inicialização na mesma linha
		
	}
}
