package classe;

public class Data {

	int dia;
	int mes;
	int ano;
	
	Data(){
		dia = 01;
		mes = 01;
		ano = 1970;
	}
	
	Data(int n1, int n2, int n3){
		dia = n1;
		mes = n2;
		ano = n3;
	}
	
	String obterDataFormatada() {
		return String.format("%d/%d/%d", dia, mes, ano);
		//return dia + "/" + mes + "/" + ano;
	}
	
	void imprimitDataFormatada() {
		System.out.println(obterDataFormatada()); 
	}
}
